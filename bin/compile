#!/usr/bin/env bash
# bin/compile <build-dir> <cache-dir>

# Fail fast
set -e

# Debug
# set -x

BUILD_DIR=$1
CACHE_DIR=$2
VENDOR_DIR="$BUILD_DIR/vendor"
TALIB_DIR="$BUILD_DIR/vendor/ta-lib"


echo "=====> Getting talib sources"
curl "https://netix.dl.sourceforge.net/project/ta-lib/ta-lib/0.4.0/ta-lib-0.4.0-src.tar.gz" -s -o - | tar -xvzf - -C "$VENDOR_DIR"

echo "=====> Fix Makefile.in"
cd $VENDOR_DIR
find . -type f -name "*Makefile.in*" -exec sed -i 's/prefix = @prefix@/prefix = \/app\/vendor\/talibins/g' {} +
mkdir talibins
mkdir talibins/lib
mkdir talibins/include


echo "=====> Compiling talib"
cd $TALIB_DIR
chmod +x configure
./configure LDFLAGS="-lm"
make
make install

echo "=====> Copy libs and include"
cp -R "$TALIB_DIR/src/.libs" /app/vendor/talibins/lib


#Set the following bundle config for talib_ruby gem for your app
#	heroku config:set BUNDLE_BUILD__TALIB_RUBY="--test=/test --with-talib-include=/app/vendor/talibins/include  --with-talib-lib=/app/vendor/talibins/lib"
#Put gem 'talib_ruby' in your Gemfile 






